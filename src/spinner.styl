.spinner-overlay
    position: relative
    top: 0
    left: 0
    width: 100%
    height: 100%
    z-index: 3

.spinner-wrapper
    text-align: center
    position: relative
    top: calc(50% - 50px)

    > .spinner
        min-height: 30px;
        min-width: 30px;

.spinner-message
    box-sizing: border-box
    width: 100%
    margin-top: 30px
    text-align: center
    font-weight: 400
    z-index: 100
    outline: none

.spinner
    display: inline-block
    min-height: 20px
    height: auto
    min-width: 20px
    width: auto
    background-color: transparent
    animation: rotation .7s infinite linear
    border-left: 3px solid transparent
    border-right: 3px solid transparent
    border-bottom: 3px solid transparent
    border-top: 3px solid rgba(33, 128, 192, 1)
    border-radius: 100%

    &.spinner-absolute
        position: absolute

    for $brand in $brands
        &.spinner-{$brand}
          border-top: 3px solid $brands[$brand]

        &.spinner-{$brand}.spinner-done
          border-color: $brands[$brand]
          border-width: 3px 3px 3px 3px

        &.spinner-{$brand}.done:after
          border-width: 0px 3px 0px 3px

@keyframes rotation {
    from {
        transform: rotate(0deg)
    }
    to {
        transform: rotate(359deg)
    }
}
